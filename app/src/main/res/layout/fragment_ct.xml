<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--<com.youth.banner.Banner-->
        <!--android:id="@+id/banner"-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="180dp" />-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ct_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/timg"/>
        <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
            android:id="@+id/ctRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:frv_dividerHeight="10dp"
            app:frv_footerDividersEnabled="true"
            app:frv_headerDividersEnabled="true"
            app:frv_layoutManager="grid"
            app:frv_layoutManagerOrientation="vertical"
            app:frv_spanCount="3" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>